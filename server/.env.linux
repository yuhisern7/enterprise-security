# Linux Environment Configuration
# Copy this to .env: cp .env.linux .env

# ============================================================
# RELAY SERVER (Centralized AI Training)
# ============================================================
RELAY_ENABLED=true
RELAY_URL=wss://YOUR_VPS_IP:60001
RELAY_API_URL=https://YOUR_VPS_IP:60002
RELAY_CRYPTO_ENABLED=true

# ============================================================
# CUSTOMER IDENTIFICATION (Change these!)
# ============================================================
CUSTOMER_ID=linux-client-001
PEER_NAME=linux-node

# ============================================================
# PORT CONFIGURATION
# ============================================================
DASHBOARD_PORT=60000
P2P_PORT=60001

# ============================================================
# AI CONFIGURATION
# ============================================================
AI_LEARNING_ENABLED=true
SIGNATURE_MODE=auto

# ============================================================
# KERNEL TELEMETRY (eBPF - Linux only)
# ============================================================
KERNEL_TELEMETRY_ENABLED=true
KERNEL_TELEMETRY_INTERFACE=eth0

# ============================================================
# P2P SYNC (Optional - multiple containers)
# ============================================================
PEER_URLS=

# ============================================================
# TIMEZONE
# ============================================================
TZ=Asia/Kuala_Lumpur

# ============================================================
# THREAT INTELLIGENCE APIs (Optional)
# ============================================================
VIRUSTOTAL_API_KEY=
ABUSEIPDB_API_KEY=
