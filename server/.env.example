# Environment variables for Relay Server connection
# Copy this file to .env and update with your relay server details

# Enable relay training (centralized AI for all customers)
RELAY_ENABLED=true

# WebSocket URL for P2P threat sharing
# Replace YOUR_VPS_IP with your relay server IP address
RELAY_URL=wss://YOUR_VPS_IP:60001

# HTTP API URL for model download
# Replace YOUR_VPS_IP with your relay server IP address
RELAY_API_URL=https://YOUR_VPS_IP:60002

# Unique customer identifier (change this for each customer)
CUSTOMER_ID=customer-unique-id-here

# Customer location/name (for identification)
PEER_NAME=customer-location-name

# Optional: P2P sync between this customer's own containers
# Example: PEER_URLS=https://office-ip:60001,https://branch-ip:60001
PEER_URLS=

# Dashboard and P2P ports
DASHBOARD_PORT=60000
P2P_PORT=60001
